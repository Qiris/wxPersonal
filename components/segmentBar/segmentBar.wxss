/* components/segmentBar/segmentBar.wxss */
.segmentBar {
  width: 100%;
  height: 100rpx;
  display: flex;
}
.segmentItem {
  flex: 1;
  border-bottom: 1px solid lightcoral;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.segmentItem .segmentTitle {
  font-size: 30rpx;
  color: rgb(128, 118, 118);
}
.segmentItem .segmentsecondTitle {
  font-size: 20rpx;
  color: #999;
}
.active .segmentTitle , .active .segmentsecondTitle{
  color: lightblue!important;
}