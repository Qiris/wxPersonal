/* components/d-test/d-test.wxss */
.courseItem {
  height: 100px;
  border-bottom: 5px solid lightcoral;
  display: flex;
}
.courseItem .fm {
  width: 140px;
  height: 80px;
  background-color: lightblue;
  margin: 10px;
  margin-right: 0;
}
.courseItem .desc {
  flex: 1;
  padding: 10px;
}
.courseItem .desc text {
  font-size: 13px;
  display: block;
}
.courseItem .desc .textTitle {
  font-size: 14px;
  font-weight: bold;
}
.courseItem .desc .courseTitle {
  margin: 10px 0;
}
.courseItem image {
  width: 100%;
  height: 100%;
}