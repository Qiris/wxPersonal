/* components/c-test/c-test.wxss */
.listItem {
  width: 100px;
  height: 130px;
  background-color: lightblue;
  border-radius: 10px;
  margin: 10px 0;
  position: relative;
}
.listItem image {
  width: 100%;
  height: 75%;
  border-radius: 50%;
  border: 5px dashed lightcoral;
  box-sizing: border-box;
}
.listItem view {
  text-align: center;
  color: white;
}
.delBtn {
  width: 20px;
  height: 20px;
  position: absolute;
  top: -10px;
  right: -5px;
  background-color: lightcoral;
  text-align: center;
  line-height: 20px;
  border-radius: 10px;
}
.deleteItem {
  animation: shakeAnimate 1s 0s infinite
}
/* 定义关键帧动画 */
@keyframes shakeAnimate {
  0% {
     /* 围绕y轴旋转 */
    transform: rotate(0)
  }
  10%,
  20%,
  30% {
    transform: rotate(-4deg)
  }
  15%,
  25%,
  35% {
    transform: rotate(4deg)
  }
  40% {
    transform: rotate(-2deg)
  }
  45% {
    transform: rotate(2deg)
  }
  50% {
    transform: rotate(0deg)
  }
  100% {
   transform: rotate(0deg)
  }
}